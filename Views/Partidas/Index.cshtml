@model IEnumerable<Futebol.Models.Partida>

@{
    ViewBag.Title = "Partidas";
}

<h2 class="text-center mb-4 text-warning fw-bold">Partidas</h2>

<div class="table-responsive mb-5">
    <table class="table table-bordered table-hover table-striped" style="background-color: #ffffff; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
        <thead style="background-color: #00cc66; color: white;">
            <tr>
                <th>Time Casa</th>
                <th>Visitante</th>
                <th>Data</th>
                <th>@Html.DisplayNameFor(model => model.GolsCasa)</th>
                <th>@Html.DisplayNameFor(model => model.GolsFora)</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="background-color: #f8f9fa; color: #001f3f;">
                    <td>@Html.DisplayFor(modelItem => item.TimeCasa.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.TimeFora.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Data)</td>
                    <td>@Html.DisplayFor(modelItem => item.GolsCasa)</td>
                    <td>@Html.DisplayFor(modelItem => item.GolsFora)</td>
                    <td class="text-center">
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
