@model Futebol.Models.Time

@{
    ViewBag.Title = "Criar Time";
}

<h2 class="text-center mb-4 text-warning fw-bold">Criar Novo Time</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="p-4 mb-5" style="background-color: #013220; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); color: white;">
        <h4 class="text-center text-light">Informações do Time</h4>
        <hr class="border-light" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "form-label text-light" })
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Cidade, htmlAttributes: new { @class = "form-label text-light" })
            @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "form-label text-light" })
            @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.AnoFundacao, htmlAttributes: new { @class = "form-label text-light" })
            @Html.EditorFor(model => model.AnoFundacao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AnoFundacao, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Estadio, htmlAttributes: new { @class = "form-label text-light" })
            @Html.EditorFor(model => model.Estadio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Estadio, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.CapacidadeEstadio, htmlAttributes: new { @class = "form-label text-light" })
            @Html.EditorFor(model => model.CapacidadeEstadio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CapacidadeEstadio, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.CorUniformePrimaria, htmlAttributes: new { @class = "form-label text-light" })
            @Html.EditorFor(model => model.CorUniformePrimaria, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CorUniformePrimaria, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.CorUniformeSecundaria, htmlAttributes: new { @class = "form-label text-light" })
            @Html.EditorFor(model => model.CorUniformeSecundaria, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CorUniformeSecundaria, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.AptoParaLiga, htmlAttributes: new { @class = "form-label text-light" })
            <div class="form-check">
                @Html.EditorFor(model => model.AptoParaLiga, new { htmlAttributes = new { @class = "form-check-input" } })
                @Html.ValidationMessageFor(model => model.AptoParaLiga, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="text-center">
            <input type="submit" value="Criar" class="btn btn-success btn-lg shadow-sm" />
            @Html.ActionLink("Voltar à Lista", "Index", null, new { @class = "btn btn-warning btn-lg shadow-sm ms-3" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

